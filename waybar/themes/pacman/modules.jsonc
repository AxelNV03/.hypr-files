{
    // Waybar modules configuration for Pacman theme
    "hyprland/workspaces#pacman": {
        "active-only": false,
        "all-outputs": true,
        "format": "{icon}",
        "on-click": "activate",
        "on-scroll-up": "hyprctl dispatch workspace e+1",
        "on-scroll-down": "hyprctl dispatch workspace e-1",
        "show-special": true,
        "persistent-workspaces": {
        "*": 5
        },
        "format-icons": {
                "active": "<span font='12'>Û∞ÆØ</span>",
                "empty": "<span font='8'>ÔÑë</span>",
                "default": "Û∞ä†"
        }
    },

    // Separator line
        "custom/separator_line": {
        "format": " ",
        "interval": "once",
        "tooltip": false,
        "color": "#ffcc66"
    },

    // Clock
    "clock": {
        "interval": 1,
        "format": "ÔÄó  {:%H:%M:%S}", // 24H
        "format-alt": "ÔÄó  {:%H:%M  ÔÅ≥ %Y, %d %B, %A}",
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "calendar": {
            "mode": "year",
            "mode-mon-col": 3,
            "weeks-pos": "right",
            "on-scroll": 1,
            "format": {
                "months": "<span color='#ffead3'><b>{}</b></span>",
                "days": "<span color='#ecc6d9'><b>{}</b></span>",
                "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
                "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
                "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
            }
        }
    },

    // CPU usage
        "cpu": {
        "format": "{usage}% Û∞çõ",
        "interval": 1,
        "min-length": 5,
        "format-alt-click": "click",
        "format-alt": "{icon0}{icon1}{icon2}{icon3} {usage:>2}% Û∞çõ",
        "format-icons": [
            "‚ñÅ", "‚ñÇ", "‚ñÉ", "‚ñÑ", "‚ñÖ", "‚ñÜ", "‚ñá", "‚ñà"
        ],
        "on-click-right": "gnome-system-monitor",
    },

    // Temperatura
    "temperature": {
        "interval": 10,
        "tooltip": true,
        "hwmon-path": [
            "/sys/class/hwmon/hwmon1/temp1_input",
            "/sys/class/thermal/thermal_zone0/temp"
        ],
        "critical-threshold": 82,
        "format-critical": "{temperatureC}¬∞C {icon}",
        "format": "{temperatureC}¬∞C {icon}",
        "format-icons": [
            "Û∞à∏"
        ],
        "on-click-right": "kitty --title nvtop sh -c 'nvtop'"
    },

    // Uso de Memoria RAM
    "memory": {
        "format": "{}% ÔÉâ"
    },

    // Audio Control
    "custom/playerctl-prev": {
        "format": "‚èÆ",
        "on-click": "playerctl previous",
        "tooltip": false
    },
    "custom/playerctl-info": {
        "exec": "title=$(playerctl metadata --format '{{ title }}' 2>/dev/null); [ ${#title} -gt 30 ] && echo \"${title:0:30}...\" || echo \"$title\" || echo 'No media'",
        "interval": 1,
        "format": "{}",
        "on-click-middle": "playerctl play-pause",
        "tooltip": false
    },

    "custom/playerctl-next": {
        "format": "‚è≠",
        "on-click": "playerctl next",
        "tooltip": false
    },

    // internet
    "network": {
        //"interval": 5,
        "format": "{icon} {essid} {signalStrength}%",
        // "format-wifi": "{icon} {essid} {signalStrength}%",
        // "format-ethernet": "Û∞åò {ifname}",
        "format-wifi": "{icon} {essid} {signalStrength}% - {ifname}",
        "format-ethernet": "Û∞åò {ifname} - {ifname}",
        "format-disconnected": "Û∞åô No conectado",
        "tooltip-format": "IP: {ipaddr}",
        "format-alt": "{ifname}: {ipaddr}/{cidr}",
        "on-click-right": "notify-send 'Direcci√≥n IP' \"$(ip -4 addr show | grep -oP '(?<=inet\\s)\\d+(\\.\\d+){3}')\"",
        "min-length": 24,
        "max-length": 24,
        "format-icons": [
            "Û∞§Ø", "Û∞§ü", "Û∞§¢", "Û∞§•", "Û∞§®"
        ]
    },

    // Espacio utilizado (En %)
    "custom/disk-used-percentage": {
        "exec": "df -h | grep '/dev/nvme0n1p5' | awk '{print $5}'",
        "interval": 30,
        "format": " {} üñ¥",
        "tooltip": "Porcentaje de espacio usado en el disco"
    },

    // Nivel de Volumen
    "pulseaudio": {
        "format": "{volume}% {icon}",
        "format-bluetooth": "{volume}% {icon}Ôäî",
        "format-bluetooth-muted": "Ôö© {icon}Ôäî",
        "format-muted": "Ôö©",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle"
    },

    // Brillo
    "backlight": {
        "format": "{percent}% {icon}",
        "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"]
    },

     // Porcentaje de pila
    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 15
        },
        "interval" :1,
        "format": "{capacity}% {icon}",
        "format-full": "{capacity}% {icon}",
        "format-charging": "{capacity}% Ôóß",
        "format-plugged": "{capacity}% Ôá¶",
        "format-alt": "{time} {icon}",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },

    //applets
    "tray": {
        // "icon-size": 21,
        "spacing": 10
     }
}