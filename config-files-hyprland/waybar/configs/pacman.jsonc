    "exclusive": true,
    "passthrough": false,
    "position": "top",
    "spacing": 3,
    "fixed-center": true,
    "ipc": true,
    "width": 0,
    "margin-top": 3,
    "margin-left": -5,
    "margin-right": -5,

    "modules-left": [
        "hyprland/workspaces#pacman",
        "custom/separator_line",
